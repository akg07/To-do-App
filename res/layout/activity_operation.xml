<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperationActivity">

    <Button
        android:id="@+id/update_a_documnet"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update A Document"
        app:layout_constraintBottom_toTopOf="@+id/delete_a_document"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:onClick="updateDocument"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_a_documnet" />

    <Button
        android:id="@+id/create_a_document"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create A Document"
        app:layout_constraintBottom_toTopOf="@+id/read_a_documnet"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="createDocument"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/read_a_documnet"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read a Document"
        app:layout_constraintBottom_toTopOf="@+id/update_a_documnet"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="readDocument"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_a_document" />

    <Button
        android:id="@+id/delete_a_document"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete  A Document"
        android:onClick="deleteDocument"
        app:layout_constraintBottom_toTopOf="@+id/list_of_document"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_a_documnet" />

    <Button
        android:id="@+id/list_of_document"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get A List of All Document"
        app:layout_constraintBottom_toTopOf="@+id/real_time_updates"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="getAllDocument"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_a_document" />

    <Button
        android:id="@+id/real_time_updates"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get List of All Docs with Real Time Updates "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="getAllDocumentWithRealTimeupdates"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_of_document" />
</androidx.constraintlayout.widget.ConstraintLayout>